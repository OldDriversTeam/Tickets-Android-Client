<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/cinema_ticket_item"
        android:textSize="20sp"
        android:text="楚阳影院"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/image_ticket_item"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageView
        android:scaleType="centerCrop"
        android:src="@drawable/black_line"
        android:layout_width="363dp"
        android:layout_height="2dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/movie_name_ticket_item"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/imageView" />

    <ImageView
        android:id="@+id/image_ticket_item"
        android:layout_gravity="center"
        android:src="@mipmap/ww"
        android:layout_width="105dp"
        android:layout_height="149dp"
        android:layout_marginLeft="6dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="54dp" />

    <TextView
        android:id="@+id/movie_name_ticket_item"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:text="神奇女侠"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginRight="102dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="54dp" />

    <TextView
        android:id="@+id/session_ticket_item"
        android:textColor="@color/limegreen"
        android:text="1号厅 3排5座"
        android:layout_width="175dp"
        android:layout_height="55dp"
        android:layout_marginTop="92dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginRight="77dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/time_ticket_item"
        android:layout_width="154dp"
        android:layout_height="30dp"
        android:text="6月6日 (周二) 14:30"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="98dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/price_ticket_item"
        android:textColor="@color/crimson"
        android:text="总价\n200元"
        android:textSize="22sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/session_ticket_item"
        android:layout_marginLeft="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        android:layout_marginBottom="59dp" />

</android.support.constraint.ConstraintLayout>