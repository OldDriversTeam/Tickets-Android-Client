<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/cinema_ticket_item"
        android:textSize="20sp"
        android:text="楚阳影院"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin"
        app:layout_constraintBottom_toBottomOf="@+id/image_ticket_item"
        android:layout_marginLeft="@dimen/margin"/>

    <ImageView
        android:scaleType="centerCrop"
        android:src="@drawable/black_line"
        android:layout_width="363dp"
        android:layout_height="2dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/margin"
        android:layout_marginLeft="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_ticket_item"
            android:layout_gravity="center"
            android:layout_width="105dp"
            android:layout_height="149dp"
            android:layout_marginLeft="6dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/margin" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/margin"
            android:layout_marginRight="@dimen/margin">

            <TextView
                android:id="@+id/movie_name_ticket_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                android:lines="1"
                android:ellipsize="end"
                android:layout_marginTop="@dimen/margin"
                android:layout_marginLeft="@dimen/margin"/>

            <TextView
                android:id="@+id/session_ticket_item"
                android:lines="2"
                android:ellipsize="end"
                android:textColor="@color/limegreen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginTop="@dimen/margin" />

            <TextView
                android:id="@+id/time_ticket_item"
                android:lines="1"
                android:ellipsize="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_marginLeft="@dimen/margin"/>

        </LinearLayout>

    </LinearLayout>



