<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/cinema_ticket_item"
        android:textSize="20sp"
        android:text="楚阳影院"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/image_ticket_item"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageView
        android:scaleType="centerCrop"
        android:src="@drawable/black_line"
        android:layout_width="363dp"
        android:layout_height="2dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/movie_name_ticket_item"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/imageView" />

    <ImageView
        android:id="@+id/image_ticket_item"
        android:layout_gravity="center"
        android:src="@mipmap/ww"
        android:layout_width="105dp"
        android:layout_height="149dp"
        android:layout_marginLeft="6dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="54dp" />

    <TextView
        android:id="@+id/movie_name_ticket_item"
        android:layout_width="233dp"
        android:layout_height="26dp"
        android:text="神奇女侠"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        android:lines="1"
        android:ellipsize="end"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="54dp"
        app:layout_constraintLeft_toRightOf="@+id/image_ticket_item"
        android:layout_marginLeft="21dp"
        tools:layout_editor_absoluteY="58dp" />

    <TextView
        android:id="@+id/session_ticket_item"
        android:lines="2"
        android:ellipsize="end"
        android:textColor="@color/limegreen"
        android:text="1号厅 3排5座"
        android:layout_width="228dp"
        android:layout_height="51dp"
        app:layout_constraintLeft_toRightOf="@+id/image_ticket_item"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/movie_name_ticket_item"
        tools:layout_editor_absoluteY="86dp" />

    <TextView
        android:id="@+id/time_ticket_item"
        android:lines="1"
        android:ellipsize="end"
        android:layout_width="225dp"
        android:layout_height="34dp"
        android:text="6月6日 (周二) 14:30"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintLeft_toRightOf="@+id/image_ticket_item"
        android:layout_marginLeft="21dp"
        tools:layout_editor_absoluteY="153dp" />

