<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/movie_list_item_image"
        android:layout_gravity="center"
        android:src="@mipmap/ww"
        android:layout_width="105dp"
        android:layout_height="149dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/movie_list_item_name"
        android:layout_width="222dp"
        android:layout_height="25dp"
        android:text="神奇女侠"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/movie_list_item_score"
        android:textColor="@color/red"
        android:text="评分 ： 10.0"
        android:layout_width="85dp"
        android:layout_height="26dp"
        android:layout_marginRight="145dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/movie_list_item_name"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/movie_list_item_message"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:lines="3"
        android:ellipsize="end"
        android:id="@+id/movie_list_item_message"
        android:layout_width="197dp"
        android:layout_height="52dp"
        android:text="女侠带我闯天涯"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="33dp"
        android:layout_marginBottom="32dp" />

</android.support.constraint.ConstraintLayout>
