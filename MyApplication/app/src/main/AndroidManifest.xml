<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.olddrivers.myapplication">

    <!-- To access Google+ APIs: -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name=".view.activity.MainActivity" />
        <activity
            android:name=".view.activity.LoginActivity"
            android:label="@string/title_activity_user_login" />
        <activity
            android:name=".view.activity.MovieDetailActivity"
            android:label="@string/title_activity_movie_detail"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.activity.CinemaChoosingActivity"
            android:label=""
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.activity.SessionChoosingActivity"
            android:label="@string/title_activity_session_choosing"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".view.activity.RegisterActivity" />
        <activity
            android:name=".view.activity.SeatChoosingActivity"
            android:label="@string/title_activity_seat_choosing"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.activity.TicketConfirm"
            android:label="@string/title_activity_ticket_confirm"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.activity.newTicketConfirm"
            android:label="@string/title_activity_new_ticket_confirm"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.activity.CompletePayment"
            android:label="@string/title_activity_complete_payment"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>